<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wishlist</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
    .product-card {
        display: flex;
        height: 250px; 
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .product-image {
        flex: 0 0 40%; 
    }

    .product-details {
        flex: 1;
        padding: 10px;
    }

    .product-image img {
        max-width: 100%; 
        max-height: 100%; 
        height: auto;
        border-radius: 5px 0 0 5px;
    }
     .d-flex button {
        white-space: nowrap; 
    }
</style>

</head>

<body>

    {{>header}}
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-3 bg-light d-flex flex-column align-items-start">
                {{>profilesidebar}}
                <div class="flex-grow-1"></div>
            </div>

            <!-- Main Content Area -->
            <div class="col-md-9 mt-5">
                <h2>Wishlist</h2>
                <div class="row">
                    {{#each wishlistdata}}
                    <div class="col-md-12">
                        <div class="product-card" id="product-{{this.productId}}">
                            <div class="product-image">
                                <img src="{{image}}" alt="{{name}}">
                            </div>
                            <div class="product-details">
                                <a href="/productdetails/{{this.productId}}">
                                <h6>{{name}}</h6>
                                </a>
                              
                                <h6>Price: â‚¹{{price}}</h6>
                                <p>Description: {{description}}</p>
                                <div class="d-flex ">
                                <form  class="addToCartForm me-2">
                                    <input type="hidden" name="productId" value="{{this.productId}}">
                                    <input type="hidden" name="price" value="{{this.price}}">
                                    <button type="submit" onclick="addtocart('{{this.productId}}')" class="btn btn-primary">Add to Cart</button>
                                  
                                </form>
                                <form  class="removeFromWishlistForm">
                                    <input type="hidden" name="productId" value="{{this.productId}}">
                                    <button type="submit" onclick="removefromwishlist('{{this.productId}}')" class="btn btn-danger">Remove from Wishlist</button>
                                </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
 <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
 
     <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
<script>


      function removefromwishlist(productId) {
        event.preventDefault()
      

        $.ajax({
            url: '/removeFromWishlist',
            type: 'DELETE',
            contentType: 'application/json',
            data: JSON.stringify({ productId}),
            success: function(response) {
              Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: response.message,
                    timer: 4000, // Duration in milliseconds
                    toast: true,
                    position: 'top', // Toast position
                    showConfirmButton: false // Hide confirmation button
                });
                 // Find the card and fade it out
              let cardToRemove = $(`#product-${productId}`).closest('.product-card');
            cardToRemove.fadeOut('slow', function() {
                $(this).remove(); // Remove the card from the DOM
            });
            },
            error: function(xhr, status, error) {
                  if (xhr.responseJSON && xhr.responseJSON.error) {
                        Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: xhr.responseJSON.error,
                        timer: 4000,
                        toast: true,
                        position: 'top',
                        showConfirmButton: false
                    });
                    } else {
                        console.error('Error removing product from wishlist:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Error removing product from wishlist. Please try again.',
                        timer: 4000,
                        toast: true,
                        position: 'top',
                        showConfirmButton: false
                    });
                    }
                }
            });
        }
         function addtocart(productId) {
        event.preventDefault()
        

        $.ajax({
            url: '/addtoCartfromWishlist',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ productId}),
            success: function(response) {
              Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: response.message,
                    timer: 4000, // Duration in milliseconds
                    toast: true,
                    position: 'top', // Toast position
                    showConfirmButton: false // Hide confirmation button
                });
         
            },
            error: function(xhr, status, error) {
                  if (xhr.responseJSON && xhr.responseJSON.error) {
                        Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: xhr.responseJSON.error,
                        timer: 4000,
                        toast: true,
                        position: 'top',
                        showConfirmButton: false
                    });
                    } else {
                        console.error('Error add to cart:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Error add to cart. Please try again.',
                        timer: 4000,
                        toast: true,
                        position: 'top',
                        showConfirmButton: false
                    });
                    }
                }
            });
        }
</script>
  
   
</body>

</html>
