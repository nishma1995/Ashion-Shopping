<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <script src="/js/validateform.js"></script>

    <style>
        /* Adjustments for sidebar height */
        .sidebar {
            height: 100vh;
            /* Set sidebar height to fill the viewport */
            overflow-y: auto;
            /* Allow vertical scrolling if content exceeds viewport height */
        }
    </style>
</head>

<body>
    {{>header}}
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 bg-light d-flex flex-column align-items-start">
                {{>profilesidebar}}
                <div class="flex-grow-1"></div> <!-- This will make the sidebar expand to fill the available space -->
            </div>

            <!-- Main Content Area -->
            <div class="col-md-9 mt-5">
                <!-- Order Details -->
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Order #12345</h5>
                        <p class="card-text">Order Date: January 1, 2024</p>
                        <p class="card-text">Status: Shipped</p>
                        <hr>
                        <!-- Items in the Order -->
                        <h6 class="card-subtitle mb-2">Items in the Order:</h6>
                        <div class="list-group">
                            <!-- Item 1 -->
                            <a href="#" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Product Name 1</h6>
                                    <small>$19.99</small>
                                </div>
                                <p class="mb-1">Description of Product 1</p>
                                <small>Quantity: 2</small>
                            </a>
                            <!-- Item 2 -->
                            <a href="#" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Product Name 2</h6>
                                    <small>$24.99</small>
                                </div>
                                <p class="mb-1">Description of Product 2</p>
                                <small>Quantity: 1</small>
                            </a>
                            <!-- Item 3 -->
                            <a href="#" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Product Name 3</h6>
                                    <small>$14.99</small>
                                </div>
                                <p class="mb-1">Description of Product 3</p>
                               <small>Quantity: 2</small>
                                <p class="mb-1">Shipping Date: 2024-03-22</p>
                                <p class="mb-1">Status: Shipped</p>
                                 <button type="button" class="btn btn-danger">Cancel Order</button>
                            </a>
                            <!-- Add more items as needed -->
                        </div>
                        <!-- Add New Address Button -->
                        <div class="text-end mb-3">
                            <button type="submit" class="btn btn-primary">Add New Address</button>
                        </div>

                        <!-- Shipping Addresses -->
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Shipping Address 1</h5>
                                <p class="card-text">John Doe</p>
                                <p class="card-text">123 Main St</p>
                                <p class="card-text">City, State, ZIP</p>
                                <div class="text-end">
                                    <button type="button" class="btn btn-secondary">Update</button>
                                    <button type="button" class="btn btn-danger">Remove</button>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Shipping Address 2</h5>
                                <p class="card-text">Jane Smith</p>
                                <p class="card-text">456 Elm St</p>
                                <p class="card-text">City, State, ZIP</p>
                                <div class="text-end">
                                    <button type="button" class="btn btn-secondary">Update</button>
                                    <button type="button" class="btn btn-danger">Remove</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                function previewImage(input) {
                    var imagePreview = document.getElementById("imagePreview");

                    if (input.files && input.files[0]) {
                        var reader = new FileReader();

                        reader.onload = function (e) {
                            imagePreview.src = e.target.result;
                        };

                        reader.readAsDataURL(input.files[0]);
                    }
                }
            </script>
</body>

</html>