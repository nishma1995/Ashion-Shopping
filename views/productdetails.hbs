        function addToWishlist(productId) {

            event.preventDefault()
            var productName = "{{data.name}}";
            var productPrice = "{{data.price}}";
            var quantityInput = document.getElementById('quantity');

            var quantityValue = quantityInput.value;



            var selectedSize = $('input[name="size__radio"]:checked').val();
            var selectedColor = $('input[name="color__radio"]:checked').val();


            const selectedColorStock = $(`input[name="color__radio"][value="${selectedColor}"]`).data('stock');

            if (!selectedSize || !selectedColor || isNaN(quantityValue) || quantityValue <= 0) {

                Swal.fire({

                    text: 'Please select a size, color, and enter a valid quantity.',
                    toast: true,
                    position: 'top',
                    showConfirmButton: false,
                    timer: 4000
                });
                return;
            }



            if (quantityValue > selectedColorStock) {
                Swal.fire({
                    text: 'Please select a quantity within available stock.',
                    toast: true,
                    position: 'top',
                    showConfirmButton: false,
                    timer: 4000
                });
                return;
            }


            var cartData = {
                name: productName,
                price: productPrice,
                size: selectedSize,
                color: selectedColor,
                quantity: quantityValue,
                stockleft: selectedColorStock



            };
            console.log(cartData)


            $.ajax({
                url: '/addToWishlist',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ productId, cartData }),
                success: function (response) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: 'Product added to wishlist!',
                        timer: 4000, // Duration in milliseconds
                        toast: true,
                        position: 'top', // Toast position
                        showConfirmButton: false // Hide confirmation button
                    });
                },
                error: function (xhr, status, error) {
                    if (xhr.responseJSON && xhr.responseJSON.error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: xhr.responseJSON.error,
                            timer: 4000,
                            toast: true,
                            position: 'top',
                            showConfirmButton: false
                        });
                    } else {
                        console.error('Error adding product to wishlist:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Error adding product to wishlist. Please try again.',
                            timer: 4000,
                            toast: true,
                            position: 'top',
                            showConfirmButton: false
                        });
                    }
                }
            });
        }

