    <script>


        var sizedetailsJSON = {{{ sizedetailsJSON }}}; // Assuming sizedetailsJSON is your JSON data
        console.log(sizedetailsJSON); // Check the parsed JSON object in the browser console


        // Function to update available colors based on selected size
        function updateAvailableColors(selectedSize) {
            // Find the corresponding size details
            const sizeDetails = sizedetailsJSON.find(detail => detail.size === selectedSize);

            const colorOptionsDiv = $('#colorOptions');
            colorOptionsDiv.empty();
            if (sizeDetails && sizeDetails.availableColors && sizeDetails.availableColors.length > 0) {
                sizeDetails.availableColors.forEach(color => {
                    colorOptionsDiv.append(`
                    <div style="display:inline;" >
                <label for="${color.color}-btn"  >
                    <input  type="radio" name="color__radio" id="${color.color}-btn" value="${color.color}" data-stock="${color.quantity}">
                    
                    <span class="checkmark ${color.color.toLowerCase()}-bg"></span>
                </label>
                <span id="${color.color}-quantity-info" class="color-quantity-info">(${color.quantity} left)</span>
                </div>
            `);
                });
            } else {
                colorOptionsDiv.append(`<p>This size does not have any available colors.</p>`);
            }
        }

        $(document).ready(function () {

            $('#clear-search').click(function () {
                $('#search-input').val('')
            })


            $('input[name="size__radio"]').on('change', function () {
                const selectedSize = $(this).val();
                updateAvailableColors(selectedSize);
            });
            const selectedColor = $(this).val();
            const selectedColorStock = $(this).data('stock');
            const quantityInput = document.getElementById('quantity');
            const quantityValue = quantityInput.value;

            // Display available quantity below the selected color
            $(`#${selectedColor}-quantity-info`).text(`Available stock: ${selectedColorStock}`);

            // {{!-- // Check if entered quantity is valid
            // if (quantityValue <= 0 || quantityValue > selectedColorStock) {
            //    Swal.fire({
            //      text: 'Please enter a valid quantity within available stock.',
            //     toast: true,
            //    position: 'top',
            //    showConfirmButton: false,
            //     timer: 4000
            // });
            //    } --}}

            // Initially update available colors based on the default selected size
            const defaultSize = $('input[name="size__radio"]:checked').val();
            updateAvailableColors(defaultSize);





            $('.cart-btn').on('click', function (e) {
                e.preventDefault();


                var productName = "{{data.name}}";
                var productPrice = parseInt(document.querySelector('.product__details__price').textContent.replace(/[^\d.]/g, ''))
                var productImage = "{{data.image.paths.[0]}}";
                var productId = "{{data._id}}";
                var quantityInput = document.getElementById('quantity');

                var quantityValue = quantityInput.value;

                console.log(productPrice)

                var selectedSize = $('input[name="size__radio"]:checked').val();
                var selectedColor = $('input[name="color__radio"]:checked').val();


                const selectedColorStock = $(`input[name="color__radio"][value="${selectedColor}"]`).data('stock');

                if (!selectedSize || !selectedColor || isNaN(quantityValue) || quantityValue <= 0) {

                    Swal.fire({

                        text: 'Please select a size, color, and enter a valid quantity.',
                        toast: true,
                        position: 'top',
                        showConfirmButton: false,
                        timer: 4000
                    });
                    return;
                }



                if (quantityValue > selectedColorStock) {
                    Swal.fire({
                        text: 'Please select a quantity within available stock.',
                        toast: true,
                        position: 'top',
                        showConfirmButton: false,
                        timer: 4000
                    });
                    return;
                }


                var cartData = {
                    name: productName,
                    price: productPrice,
                    image: productImage,
                    productId: productId,
                    size: selectedSize,
                    color: selectedColor,
                    quantity: quantityValue,
                    stockleft: selectedColorStock



                };


                $.ajax({
                    type: 'POST',
                    url: '/addtoCart',
                    contentType: 'application/json',
                    data: JSON.stringify(cartData),
                    success: function (response) {
                        console.log(response)

                        console.log('Item added to cart successfully!');

                        Swal.fire({

                            text: response.message,
                            toast: true,
                            position: 'top',
                            showConfirmButton: false,
                            timer: 4000
                        });
                    },
                    error: function (xhr, status, error) {

                        if (xhr.status === 401) {
                            Swal.fire({
                                text: 'Please log in for adding to cart',
                                toast: true,
                                position: 'top',
                                showConfirmButton: false,
                                timer: 4000
                            });
