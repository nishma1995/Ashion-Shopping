<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Category</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
</head>

<body>
    {{> adminheader}}
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 bg-light d-flex flex-column align-items-start">
                {{> adminsidebar}}
                <div class="flex-grow-1"></div> <!-- This will make the sidebar expand to fill the available space -->
            </div>

            <!-- Main Content Area -->
            <div class="col-md-9">
                <form action="/admin/addCategory" method="post" class="mx-auto mt-5" style="max-width: 800px;" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="title mb-4">Add Category</h4>

                            <!-- Thumbnail Image Upload -->
                            <div class="mb-3">
                                <label for="categoryImage" class="form-label">Category Image</label>
                                <input type="file" class="form-control" id="categoryImage" name="categoryImage" accept="image/*"  onchange="previewImage(this)" required>
                                 <img id="imagePreview" src="/img/placeholder.jpg" alt="Image Preview" style="width: 100px; height: 100px; margin-top:10px;">
                            </div>

                            <!-- Category Name -->
                            <div class="mb-3">
                                {{#if error}}
                                <span  style="color: red;">{{error}}</span>
                                <div>
                                <label for="categoryName" class="form-label">Category Name</label>
                                <input type="text" class="form-control" id="categoryName" name="categoryName" required>
                                </div>
                                {{else}}
                                <div>
                               <label for="categoryName" class="form-label">Category Name</label>
                                <input type="text" class="form-control" id="categoryName" name="categoryName" required>
                                </div>
                                {{/if}}
                            </div>

                            <!-- Category Description -->
                            <div class="mb-3">
                                <label for="categoryDescription" class="form-label">Category Description</label>
                                <textarea class="form-control" id="categoryDescription" name="categoryDescription" rows="3" required></textarea>
                            </div>

                            <!-- Save and Cancel Buttons -->
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <button type="button" class="btn btn-secondary ml-2" id="cancelBtn">Cancel</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Script for Navigation -->
    <script>
        document.getElementById('cancelBtn').addEventListener('click', function() {
            window.location.href = '/admin/categoryManagement'; // 
        });

         function previewImage(input) {
            var imagePreview = document.getElementById("imagePreview");

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    imagePreview.src = e.target.result;
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
    </script>
</body>

</html>
