                    <div class="row">

                        {{#each data}}
                        <div class="col-lg-4 col-md-6">
                            <div class="product__item">

                                <div class="product__item__pic set-bg" data-setbg="{{this.image.paths.[0]}}">
                                    <div class="label new">New</div>
                                    <ul class="product__hover">
                                        <li><a href="{{this.image.paths.[0]}}" class="image-popup"><span
