                                        {{!-- <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                        <li><a href="#"><span class="icon_bag_alt"></span></a></li>--}}
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="/productdetails/{{this._id}}">{{this.name}}</a></h6>
                                    {{#if this.offerRate}}
                                    <p style="color:blue;"><span
                                            style="text-decoration:line-through">{{this.price}}</span>&nbsp;<span
                                            style="text-decoration:none;color:red">{{this.offerRate}}%</span></p>
                                    {{else}}
