    <script>

        function submitPaginationForm(pageNum) {
            document.getElementById('pageNumInput').value = pageNum;
            document.getElementById('paginationForm').submit();
        }
        function submitSearchPaginationForm(pageNum) {
            document.getElementById('searchPageNumInput').value = pageNum;
            document.getElementById('searchPaginationForm').submit();
        }


        $(document).ready(function () {



            $('#clear-search').click(function () {
                $('#search-input').val('')
            })

            $('.search-model-form').on('submit', function (event) {
                event.preventDefault();

                const searchText = $('#search-input').val();
                const category = $('#category').val();

                // Construct the URL with the search query as a parameter
                const searchUrl = `/search?search=${encodeURIComponent(searchText)}&category=${category}`;

                // Redirect to the search URL
                window.location.href = searchUrl;
            });


        });

    </script>
