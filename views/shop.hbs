                                {{else if ../searchText}}
                                <a href="#" onclick="submitSearchPaginationForm('{{this}}')">{{this}}</a>
                                {{else}}
                                <a href="/category?category={{encodeURI ../sort}}&pageNum={{this}}">{{this}}</a>
                                {{/if}}
                                {{/each}}
                            </div>

                        </div>
                        {{#if noResults}}
