                            <h6>Item not found</h6>
                        </div>
                        {{else}}
                        <!-- Your code to display products goes here -->
                        {{/if}}
                        <form id="paginationForm" action="/availability" method="post" style="display: none;">
                            <input type="hidden" name="category" value="{{data.[0].category}}">
                            <input type="hidden" name="filter" value="{{filterApplied}}">
                            <input type="hidden" name="pageNum" id="pageNumInput">
                        </form>
                        <form id="searchPaginationForm" action="/search" method="get" style="display: none;">
                            <input type="hidden" name="search" id="searchQueryInput" value="{{searchText}}">
                            <input type="hidden" name="category" value="{{data.[0].category}}">
                            <input type="hidden" name="pageNum" id="searchPageNumInput">
                        </form>

                    </div>
