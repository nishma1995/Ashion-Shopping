                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    {{/if}}
                                    {{#if this.offerRate}}
                                    <div class="product__price">{{calculatePersatage this.offerRate this.price}}</div>
                                    {{else}}
