<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <!-- Include Bootstrap CSS via CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">


    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

        #wrapper {
            display: flex;
        }

        #sidebar-wrapper {
            width: 250px;
            height: 100vh;
            background-color: #f4f4f4;
            color: #232222;
            padding-top: 20px;
        }

        #sidebar-wrapper .sidebar-heading {
            font-size: 1.2rem;
            padding: 10px;
            text-align: center;
        }

        #sidebar-wrapper .list-group-item {
            color: #151515;
            background-color: #f4f4f4;
            border: none;
            border-radius: 0;
            transition: 0.3s;
        }

        #sidebar-wrapper .list-group-item:hover {
            background-color: #cabfbf;
        }

        #sidebar-wrapper .list-group-item i {
            margin-right: 10px;
        }
    </style>
</head>

<body>
    <section>
        <div class="d-flex" id="wrapper">

            <!-- Sidebar -->
            <div class="" id="sidebar-wrapper">

                <div class="sidebar-heading"><i class="fas fa-user-cog mr-2"></i> Welcome Admin
                    <hr class="my-2">
                </div>
                <div class="list-group list-group-flush">
                    <a href="/admin/dashboard" class="list-group-item list-group-item-action">
                        <i class="fas fa-tachometer-alt"></i>Dashboard
                    </a>
                    <a href="/admin/productManagement?page=1" class="list-group-item list-group-item-action">
                        <i class="fas fa-box"></i> Products
                    </a>
                    <a href="/admin/categoryManagement" class="list-group-item list-group-item-action">
                        <i class="fas fa-folder"></i>Category
                    </a>
                    <a href="/admin/orderManagement" class="list-group-item list-group-item-action">
                        <i class="fas fa-file-alt"></i>Orders
                    </a>
                    <a href="/admin/coupon" class="list-group-item list-group-item-action">
                        <i class="fas fa-tags"></i> Coupons
                    </a>
                    <a href="/admin/salesReportPage" class="list-group-item list-group-item-action">
                        <i class="fas fa-chart-line"></i>Sales Report
                    </a>
                    <a href="/admin/userManagement" class="list-group-item list-group-item-action">
                        <i class="fas fa-user"></i> Users
                    </a>
                    <a href="/admin/offers" class="list-group-item list-group-item-action">
                        <i class="fas fa-image"></i> Offers
                    </a>
                </div>
            </div>

            <!-- Page Content -->
        </div>
    </section>
    <!-- Optional JavaScript; choose one of the two! -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>